{
  "expo": {
    "name": "Metropolis",
    "slug": "metropolis",
    "owner": "apocalypsecalculator",
    "privacy": "hidden",
    "version": "1.1.0",
    "githubUrl": "https://github.com/wlmac/mobile",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "metropolis",
    "userInterfaceStyle": "automatic",
    "notification": {
      "color": "#073763",
      "iosDisplayInForeground": true
    },
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1c233f"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true, 
      "bundleIdentifier": "com.maclyonsden.metropolis",
      "buildNumber": "3",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app accesses location information to display location in respect to the school"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "package": "com.maclyonsden.metropolis",
      "config": {
        "googleMaps": {
          "apiKey": "API key here"
        }
      },
      "versionCode": 6
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    }
  }
}
